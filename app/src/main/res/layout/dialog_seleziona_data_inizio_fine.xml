<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:columnCount="4"
    android:rowCount="2">


    <TextView
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_inizio_key"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_18_sp"
        android:padding="10dp"
        android:text="@string/cartellino_orologio_data_inizio"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_inizio_value"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/font_size_18_sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_inizio_button"
        android:padding="10dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@color/bpTransparent"
        android:drawableRight="@drawable/ic_date_picker_grey" />

    <TextView
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_fine_key"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_18_sp"
        android:padding="10dp"
        android:text="@string/cartellino_orologio_data_fine"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_fine_value"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/font_size_18_sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/dialog_seleziona_data_inizio_fine_data_fine_button"
        android:padding="10dp"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@color/bpTransparent"
        android:drawableRight="@drawable/ic_date_picker_grey" />

</GridLayout>